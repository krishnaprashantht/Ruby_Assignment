<h2 class="textAlignCenter">Add User</h2>

<%= form_for :user, :url => { :controller => 'user', :action => 'add_user', :class => 'feedbackSpacing' } do |u| %>

	<%= u.label :Email %>
	<%= u.text_field :email, :type => "email", :size => 25 %><br />
	
	<%= u.label :Password %>
	<%= u.text_field :password, :type => "password", :size => 25 %><br />

	<%= check_box_tag(:admin) %>
	<%= label_tag(:admin, "Make Admin") %>
	
	<%= submit_tag "Add User"%>
	
<% end %>




		
